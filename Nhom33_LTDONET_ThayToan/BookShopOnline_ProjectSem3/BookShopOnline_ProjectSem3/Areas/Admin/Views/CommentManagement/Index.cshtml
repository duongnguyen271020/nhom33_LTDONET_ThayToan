@model IEnumerable<BookShopOnline_ProjectSem3.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>BookName #</th>
                                        <th>Username </th>
                                        <th>Rating </th>
                                        <th>Content </th>
                                        <th>Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.CommentID">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Book.BookName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Username)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Rating)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Content)
                                            </td>
                                            
                                            
                                            <td>

                                                @Html.ActionLink("Details", "Details", new { id = item.CommentID }) |
                                                @Ajax.ActionLink("Delete", "Delete", new { id = item.CommentID }, new AjaxOptions
                                                {
                                                    Confirm = "Do you want to delete this record ?",
                                                    OnComplete = "$('#row_" + item.CommentID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.CommentID })*@
                                            </td>

                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


