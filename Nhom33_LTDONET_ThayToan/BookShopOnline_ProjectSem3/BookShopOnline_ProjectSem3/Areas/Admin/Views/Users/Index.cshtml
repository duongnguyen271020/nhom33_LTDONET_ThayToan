@model IEnumerable<BookShopOnline_ProjectSem3.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div>
            <h2>Clients Data Table</h2>
        </div>
        <div class="card">
            <div class="card-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>FirstName #</th>
                                        <th>LastName </th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.UserID">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @*@Html.DisplayFor(modelItem => item.Status)*@
                                                <a href="#" class="btn-active" data-id="@item.UserID">@(item.Status?"Active":"Locked")</a>
                                            </td>


                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.UserID }) |
                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.UserID })*@
                                                @Ajax.ActionLink("Delete", "Delete", new { id = item.UserID }, new AjaxOptions
                                                {
                                                    Confirm = "Do you want to delete this record ?",
                                                    OnComplete = "$('#row_" + item.UserID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



