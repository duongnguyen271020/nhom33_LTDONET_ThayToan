@model IEnumerable<BookShopOnline_ProjectSem3.Models.FAQ>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <br />
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>Question #</th>
                                        <th>Answer </th>
                                        <th>Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ContactID">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Question)
                                            </td>
                                            <td>
                                                @Html.Raw(item.Answer.Remove(150))...
                                                @*@Html.Raw(@n.Content.Remove(150))...*@
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ContactID }) |

                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.ContactID })*@
                                                @Ajax.ActionLink("Delete", "Delete", new { id = item.ContactID }, new AjaxOptions
                                                {
                                                    Confirm = "Do you want to delete this record ?",
                                                    OnComplete = "$('#row_" + item.ContactID + " ').remove()",
                                                    HttpMethod = "Delete"
                                                })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


