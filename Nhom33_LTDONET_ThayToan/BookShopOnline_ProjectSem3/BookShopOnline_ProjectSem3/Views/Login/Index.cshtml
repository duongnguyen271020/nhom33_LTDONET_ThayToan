@model BookShopOnline_ProjectSem3.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<br />
<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">BookShop Online</a></li>
                        <li><a href="#" class="active">Sign In</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- user-login-area-start -->
<div class="user-login-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Login</h2>
                </div>
            </div>
            <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
                @{ Html.BeginForm("Login","Login", FormMethod.Post); }
                <div class="login-form">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, new { @class = "small mb-1" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { placeholder = "Username", @class = "form-control py-4" } })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "small mb-1" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Password", @class = "form-control py-4", @type = "password" } })

                    </div>

                    <div style="color:red;margin-bottom: 10px">
                        @Html.DisplayFor(model => model.LoginErrorMessage)
                    </div>
                    <input type="submit" value="Login">

                    <a href="@Url.Action("Index","Register")">Don't Have Account?</a>
                    <br />
                    <a href="#">Forgot your password?</a>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- user-login-area-end -->
