<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/Admin/vendors/iconfonts/mdi/font/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/Admin/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/Admin/vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link href="~/Content/Admin/css/vertical-layout-light/style.css" rel="stylesheet" />
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Content/Admin/images/favicon.png" />
    @RenderSection("css", required: false)
</head>
<body>

    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="#"><img src="~/Content/Admin/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="#"><img src="~/Content/Admin/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">

                    <!-- Information  -->
                    <li class="nav-item nav-profile dropdown">
                        @{
                            var obj = Session["Employee"] as BookShopOnline_ProjectSem3.Models.Employee;
                            string image = Session["Image"].ToString();
                        }

                        @if (Session["Employee"] != null)
                        {

                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                                <img src="~/UploadImageEmployees/@image" alt="profile" />
                                @obj.Username
                            </a>

                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                                <a class="dropdown-item" href="@Url.Action("Details","ProfileEmp", new { id =  Session["EmployeeId"] })"
                                   @*href="@Url.Action("Edit","ProfileEmp") , new { id =  Session["EmployeeId"]}"*@>
                                    <i class="mdi mdi-settings text-primary"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout","LoginEmployee")">
                                    <i class="mdi mdi-logout text-primary"></i>
                                    Logout
                                </a>
                            </div>
                        }

                    </li>

                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_settings-panel.html -->
            <div class="theme-setting-wrapper">
                <div id="settings-trigger"><i class="mdi mdi-settings"></i></div>
                <div id="theme-settings" class="settings-panel">
                    <i class="settings-close mdi mdi-close"></i>
                    <p class="settings-heading">SIDEBAR SKINS</p>
                    <div class="sidebar-bg-options selected" id="sidebar-light-theme">
                        <div class="img-ss rounded-circle bg-light border mr-3"></div>Light
                    </div>
                    <div class="sidebar-bg-options" id="sidebar-dark-theme">
                        <div class="img-ss rounded-circle bg-dark border mr-3"></div>Dark
                    </div>
                    <p class="settings-heading mt-2">HEADER SKINS</p>
                    <div class="color-tiles mx-0 px-4">
                        <div class="tiles primary"></div>
                        <div class="tiles success"></div>
                        <div class="tiles warning"></div>
                        <div class="tiles danger"></div>
                        <div class="tiles light"></div>
                        <div class="tiles info"></div>
                        <div class="tiles dark"></div>
                        <div class="tiles default"></div>
                    </div>
                </div>
            </div>


            <!-- partial -->
            <!-- sidebar -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Dashboard")">
                            <i class="mdi mdi-view-dashboard-outline menu-icon"></i>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#general-pages" aria-expanded="false" aria-controls="general-pages">
                            <i class="mdi mdi-codepen menu-icon"></i>
                            <span class="menu-title">General Pages</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="general-pages">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","FAQManagement")"> FAQ </a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","AboutManagement")"> About Us </a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","ContactManagement")"> Contact Us </a></li>

                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#form-elements" aria-expanded="false" aria-controls="form-elements">
                            <i class="mdi mdi-file-document-box-outline menu-icon"></i>
                            <span class="menu-title">Book Management</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="form-elements">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","BookMangement")">Books</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Authors")">Authors</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Genres")">Genre</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","CommentManagement")">Comment</a></li>

                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","NewsManager")">
                            <i class="mdi mdi-pencil-box-outline menu-icon"></i>
                            <span class="menu-title">News Editors</span>

                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#auth" aria-expanded="false" aria-controls="auth">
                            <i class="mdi mdi-lock-outline menu-icon"></i>
                            <span class="menu-title">Users Management</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="auth">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","Users")"> Customers </a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","Employees")"> Employees </a></li>

                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Feedbacks")">
                            <i class="mdi mdi-comment-account-outline menu-icon"></i>
                            <span class="menu-title">FeedBacks</span>
                        </a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-security-account-outline menu-icon"></i>
                            <span class="menu-title">Staff Area</span>

                        </a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#e-commerce" aria-expanded="false" aria-controls="e-commerce">
                            <i class="mdi mdi-cart-outline menu-icon"></i>
                            <span class="menu-title">Oders Management</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="e-commerce">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","OrdersManagement")"> Orders </a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","OrderDetailsManagement")"> OrderDetails </a></li>
                            </ul>
                        </div>
                    </li>



                </ul>
            </nav>

            <!-- render dashboard -->
            @RenderBody()


            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>



    @RenderSection("scripts", required: false)
    <!-- plugins:js -->
    <script src="~/Content/Admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Content/Admin/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/Content/Admin/js/off-canvas.js"></script>
    <script src="~/Content/Admin/js/hoverable-collapse.js"></script>
    <script src="~/Content/Admin/js/template.js"></script>
    <script src="~/Content/Admin/js/settings.js"></script>

    <!-- endinject -->
    <!-- Custom js ajax delete record button-->
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!--  js success message-->
    <script src="~/Content/Admin/js/alerts.js"></script>
    <script src="~/Content/Admin/js/avgrund.js"></script>
    <!-- Custom js for this page-->
    <script src="~/Content/Admin/js/dashboard.js"></script>
    <!-- Custom js for data table -->
    <script src="~/Content/Admin/js/data-table.js"></script>
    <!-- Custom ajax js for change status-->
    <script src="~/Content/Admin/js/UserController.js"></script>
    <script src="~/Content/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/main.js"></script>
    <!-- End custom js for this page-->
</body>
</html>
